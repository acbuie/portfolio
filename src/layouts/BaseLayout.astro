---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header/Header.astro";
import BaseHead from "@/layouts/BaseHead.astro";

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en" class="relative min-h-[100%]">
  <head>
    <BaseHead pageTitle={pageTitle} />
  </head>
  <body
    class="text-primary bg-bg selection:bg-gruv-aqua selection:text-primary flex min-h-screen w-screen flex-col overflow-x-hidden antialiased"
  >
    <Header />
    <main class="mb-40 flex grow justify-center">
      <!--NOTE: Equivalent to px-5 but actually caps the ExpressiveCode component -->
      <div class="w-[calc(100vw-2.5rem)] has-[div#hero]:flex md:w-175">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
