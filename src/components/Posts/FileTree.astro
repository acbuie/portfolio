---
import { processFileTree } from "./rehype-file-tree";

const fileTreeHtml = await Astro.slots.render("default");
const html = processFileTree(fileTreeHtml, "Directory");
---

<starlight-file-tree set:html={html} class="not-content" data-pagefind-ignore />

<style>
  starlight-file-tree {
    --x-space: 1.5rem;
    --y-space: 0.125rem;
    --y-pad: 0;

    display: block;
    border: 1px solid var(--color-bg-code);
    border-radius: var(--rounded);
    padding: 1rem;
    background-color: var(--color-bg-code);
    font-size: var(--text-sm);
    font-family: var(--font-mono);
    overflow-x: auto;
    border-radius: 0.75rem;
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;

    & :global(.directory > details) {
      border: 0;
      padding: 0;
      padding-inline-start: var(--x-space);
      background: transparent;
    }

    & :global(.directory > details > summary) {
      margin-inline-start: calc(-1 * var(--x-space));
      border: 0;
      padding: var(--y-pad) 0.625rem;
      font-weight: normal;
      color: var(--color-primary);
      max-width: 100%;
    }

    & :global(.directory > details > summary::marker),
    :global(.directory > details > summary::-webkit-details-marker) {
      color: var(--color-bg-secondary);
    }

    & :global(.directory > details > summary:hover),
    :global(.directory > details > summary:hover .tree-icon),
    :global(.directory > details > summary:hover .highlight) {
      cursor: pointer;
      color: var(--color-gruv-aqua);
      fill: currentColor;
    }

    /* NOTE: Slow on mouse movement */
    /* & :global(.directory > details > summary:hover ~ ul) { */
    /*   border-color: var(--color-gruv-aqua); */
    /* } */

    & :global(.directory > details > summary:hover .highlight .tree-icon) {
      color: var(--color-gruv-aqua);
      fill: currentColor;
    }

    & :global(ul) {
      margin-inline-start: 0.5rem;
      border-inline-start: 1px solid var(--color-bg-secondary);
      padding: 0;
      padding-inline-start: 0.125rem;
      list-style: none;
    }

    & > :global(ul) {
      margin: 0;
      border: 0;
      padding: 0;
    }

    & :global(li) {
      margin: var(--y-space) 0;
      padding: var(--y-pad) 0;
    }

    & :global(.file) {
      margin-inline-start: calc(var(--x-space) - 0.125rem);
      color: var(--color-primary);
    }

    & :global(.tree-entry) {
      display: inline-flex;
      align-items: flex-start;
      flex-wrap: wrap;
      max-width: calc(100% - 1rem);
    }

    & :global(.tree-entry > :first-child) {
      flex-shrink: 0;
    }

    & :global(.empty) {
      color: var(--color-bg-secondary);
      padding-inline-start: 0.375rem;
    }

    & :global(.comment) {
      color: var(--color-bg-secondary);
      padding-inline-start: 1.625rem;
      max-width: 24rem;
      min-width: 12rem;
    }

    & :global(.highlight) {
      display: inline-block;
      border-radius: 0.25rem;
      padding-inline-end: 0.5rem;
      color: var(--color-bg-accent);
      background-color: var(--color-accent);
    }

    & :global(svg) {
      display: inline;
      fill: var(--color-secondary);
      vertical-align: middle;
      margin-inline: 0.25rem 0.375rem;
      width: 0.875rem;
      height: 0.875rem;
    }

    & :global(.highlight svg.tree-icon) {
      fill: currentColor;
    }
  }

  /* NOTE: Ensure margin is correct in Step */
  :global(div.aside) starlight-file-tree {
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }

  :global(ol.step) starlight-file-tree:last-child {
    margin-bottom: 0rem;
  }

  :global(ol.step) starlight-file-tree:first-child {
    margin-top: 0rem;
  }

  @media (min-width: 30em) {
    starlight-file-tree :global(.tree-entry) {
      flex-wrap: nowrap;
    }
  }
</style>
