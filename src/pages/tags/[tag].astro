---
import { getCollection } from "astro:content";

import { arrangePostCollection, getTags } from "../utils/posts";

import BaseLayout from "../../layouts/BaseLayout.astro";
import PostsList from "@/components/PostsList.astro";

export async function getStaticPaths() {
  const rawPosts = await getCollection("blogPosts");
  const tags = getTags(rawPosts);

  return tags.map((tag) => {
    const filteredPosts = rawPosts.filter((post) =>
      post.data.tags.includes(tag),
    );

    const postsArray = arrangePostCollection(filteredPosts);

    return {
      params: { tag },
      props: { postsArray: postsArray },
    };
  });
}

const { postsArray } = Astro.props;
const { tag } = Astro.params;
---

<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <PostsList postsArray={postsArray} />
</BaseLayout>
