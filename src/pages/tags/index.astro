---
import { getCollection } from "astro:content";

import { getTags } from "../utils/posts";

import Page from "@/layouts/Page.astro";

const rawPosts = await getCollection("blogPosts");
const tags = getTags(rawPosts);
---

<Page pageTitle="Tag Archive | Aidan Buie" bannerTitle="Tag Archive">
  <ul class="list-disc list-inside text-xl">
    {
      tags.sort().map((tag) => (
        <li class="my-2">
          <a href={`/tags/${tag}`}>{`#${tag}`}</a>
        </li>
      ))
    }
  </ul>
</Page>
